function validateAttributes() {
  alert("ok");


  var name = document.getElementById('name').value;
  
  var email = document.getElementById('emailid').value
  var pan = document.getElementById('pancard').value
  var exp = document.getElementById('experience').value
  var phnum = document.getElementById('phone').value
  var addres1 = document.getElementById('address1').value
  var addres2 = document.getElementById('address2').value
  var cty = document.getElementById('city_1').value
  var region = document.getElementById('region_1').value
  var pinnum = document.getElementById('pincode').value
  var img = document.getElementById('img_upload').value;
  var regex = /^[A-Za-z]+$/;
  if (!regex.test(name)) {
    alert("Invalid Name");
    return false;
     
  }

  
  else if (!/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email)) {
    alert("Invalid email");
    return false;
  }

  
  else if (!/^[A-Z]{5}[0-9]{4}[A-Z]{1}$/.test(pan)) {
    alert("Invalid Pan");
    return false;
  }

  
  else if (!/^[0-9]+$/.test(exp) || exp < 0) {
    alert("Invalid Expression");
    return false;
  }

  
  else if (!/^[0-9]{10}$/.test(phnum)) {
    alert("Invalid Phone number");
    return false;
  }

  
  else if (addres1.trim().length === 0) {
    alert("Invalid Address");
    return false;
  }
  
  else if (addres2.trim().length === 0) {
    alert("Invalid address");
    return false;
 }

 else if (cty.trim().length === 0) {
  alert("Invalid City");
  return false;
}

else if (region.trim().length === 0) {
  alert("Invalid region");
  return false;
}
  
  else if (!/^[0-9]{6}$/.test(pinnum)) {
    alert("Invalid pincode");
    return false;
  }
  else if (img.trim().length === 0) {
    alert("image link cannot be empty.");
  }

  else {window.location.href="/addbusinessman";}


}
    </script>
 </body>
</html>