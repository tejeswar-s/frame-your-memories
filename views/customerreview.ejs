<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Star Rating Form | CodingNepal</title>
    
    <script src="https://kit.fontawesome.com/c4254e24a8.js"></script>
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"/>
    <style>
      @import url('https://fonts.googleapis.com/css?family=Poppins:400,500,600,700&display=swap');
*{
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: 'Poppins', sans-serif;
}
html,body{
  display: grid;
  height: 100%;
  place-items: center;
  text-align: center;
  background-image: url("/images/reviewback.jpg");
  background-size: cover;
  background-repeat: none;
  width: 100%;
}

.head{
  text-align: center;
}

.post{
  background-color: none;
}

.container{
  position: relative;
  width: 400px;
  background-color: rgba(0, 0, 0, 0.5);
  padding: 20px 30px;
  border-radius: 5px;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.container .post{
  display: none;
}
.container .text{
  font-size: 25px;
  color: #666666;
  font-weight: 500;
}

.edit{
  margin-top: 90px;
  
}
.container .edit a{
  font-size: 16px;
  color: darkslategrey;
  font-weight: 500;
  cursor: pointer;
  text-decoration:none ;
  border: 2px solid darkslategrey;
  border-radius: 5px;
}


.container .edit a:hover{
  color: #1b1b1b;
  border: 2px solid black;
}
.container .star-widget input{
  display: none;
}

#images{
    display: block;
     position: relative;
     background-color: rgb(247, 178, 52);
     color: white;
     font-size: 1.12em;
     font-weight: 500;
     text-align: center;
     width: 80%;
     padding: 1.12em 0;
     margin-top: 15px;
     border-radius: 5px;
     cursor: pointer;
     transition: none;
     float: none;
     border-radius: 10px;
     margin-left: 40px;
    }

.star-widget label {
  font-size: 40px;
  padding: 10px;
  float: right;
  transition: all 0.2s ease;
}
input:not(:checked) ~ label:hover,
input:not(:checked) ~ label:hover ~ label{
  color: #fd4;
}
input:checked ~ label{
  color: #fd4;
}
input#rate-5:checked ~ label{
  color: #fe7;
  text-shadow: 0 0 20px #952;
}
#rate-1:checked ~  header:before{
  content: "I just hate it ";
}
#rate-2:checked ~  header:before{
  content: "I don't like it ";
}
#rate-3:checked ~  header:before{
  content: "It is awesome ";
}
#rate-4:checked ~  header:before{
  content: "I just like it ";
}
#rate-5:checked ~  header:before{
  content: "I just love it ";
}
.container form{
  display: block;
}



form header{
  width: 100%;
  font-size: 25px;
  color: #fe7;
  font-weight: 500;
  margin: 5px 0 20px 0;
  text-align: center;
  transition: all 0.2s ease;
}
form .textarea{
  height: 100px;
  width: 100%;
  overflow: hidden;
  border-radius: 5px;
}
form .textarea textarea{
  height: 100%;
  width: 100%;
  outline: none;
  color: #eee;
  border: 1px solid #333;
  background: #222;
  padding: 10px;
  font-size: 17px;
  resize: none;
  margin-left: 20px;
  border-radius: 5px;
}
.textarea textarea:focus{
  border-color: #444;
}
form .btn{
  height: 45px;
  width: 100%;
  margin: 15px 0;
}
form .btn button{
  height: 100%;
  width: 100%;
  border: 1px solid #444;
  outline: none;
  background: #222;
  color: #999;
  font-size: 17px;
  font-weight: 500;
  text-transform: uppercase;
  cursor: pointer;
  transition: all 0.3s ease;
  border-radius: 5px;
  width: 80%;
  margin-left: 20px;
}
form .btn button:hover{
  background: #1b1b1b;
}


input[type="file"]{
    display: none;
  }
  
  

 #form-data{
    max-width: 300px;
 }
  
  #result{
    display: flex;
    gap: 10px;
    padding: 10px 0;
    width: 100%;
    overflow-x: auto;
  }
  
  .thumbnail{
    height: 180px;
    border-radius: 15px;
  }
  
    </style>
  </head>
  <body>
    <div class="container">
      <div class="post" style="background-color: none;">
        <div class="text">Thanks for rating us!</div>
        <div class="edit">
          <a href="/mypage2">RETURN HOME</a></div>
      </div>
      <div class="head"> 
        <h2 style="color: rgb(247, 178, 52);">please provide your valuable feedback!</h2>
      </div>
      <div>
      <form class="star-widget" method="post" action="/sendproductreview">
        <div>
          <input type="text" value="<%=String(product_id) %>" name="pid" style="display: none;" >
        
        <input type="radio" name="rate" id="rate-5"  value="5">
        <label for="rate-5" class="fas fa-star" id="rate5"  ></label>
        <input type="radio" name="rate" id="rate-4" value="4">
        <label for="rate-4" class="fas fa-star" id="rate4"  ></label>
        <input type="radio" name="rate" id="rate-3" value="3">
        <label for="rate-3" class="fas fa-star" id="rate3"  ></label>
        <input type="radio" name="rate" id="rate-2" value="2">
        <label for="rate-2" class="fas fa-star" id="rate2" ></label>
        <input type="radio" name="rate" id="rate-1" value="1">
        <label for="rate-1" class="fas fa-star" id="rate1" ></label>
        <header></header>
    </div>
          <div id="form-data">
          <div class="textarea">
            <textarea cols="30" name="review" placeholder="Describe your experience.."></textarea>
          </div>
          
          <div class="btn">
            <button type="submit">Submit</button>
          </div>
        </div>
      </form>
    </div>
    </div>
    <script>
      const btn = document.querySelector("button");
      const post = document.querySelector(".post");
      const widget = document.querySelector(".star-widget");
      const editBtn = document.querySelector(".edit");
      const head=document.querySelector(".head");
      const cont=document.querySelector('.container');
      const text=document.querySelector(".text")
      // btn.onclick = ()=>{
      //   widget.style.display = "none";
      //   post.style.display = "block";
      //   cont.style.background="none";
      //   text.style.color="green";
      //   head.style.display="none";
        
      // }

      document.querySelector('#files').addEventListener("change",(e)=>{
	if(window.File && window.FileReader &&window.FileList && window.Blob){
		const files=e.target.files;
		const output=document.querySelector("#result");
		for(let i=0;i<files.length;i++){
			if(!files[i].type.match("image")) continue;
			const picreader=new FileReader();
			picreader.addEventListener("load",function(event){
				const picFile=event.target;
				const div=document.createElement("div");
				div.innerHTML=`<img class="thumbnail" src="${picFile.result}" title="${picFile.name}"/>`;
				output.appendChild(div);
			})
			picreader.readAsDataURL(files[i]);
		}
	}else{
		alert("your browser does not support file Api")
	}
})

    </script>
  </body>
</html>