        <p>&copy</p>
    </div>
    <script>
        
        function validate(){

        var uname1 = document.getElementById("name");
        var mymail = document.getElementById("email_id");
        var mob = document.getElementById("contact");

        if(uname1.value.trim() == ""){
          alert('First name cannot be empty! Please enter valid first name!');
          return false;
        }
        else if(!(/^[A-Za-z\._\-0-9]+[@][A-Za-z]+[\.]+[a-z]{2,3}$/.test(mymail.value)))
        {
          alert("Enter a valid email address!");
          return false;
        }
        else if(!(/^(\+\d{1,3}[- ]?)?\d{10}$/.test(mob.value))){
          alert("Enter valid mobile number!");
          return false;
        }
        else{
          return true;
        }
      }
    </script>
