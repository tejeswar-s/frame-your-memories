    <section class="contact"> 
        <div class="content">
            <h1>Contact Us</h1>
            <p>We are always available to help you.</p>
        </div>
        <div class="container">
            
            <div class="contactForm" >
                <form onsubmit="return validate()" method="post" action="/customercomplaint">
                    <h2>Send Message</h2>
                    <div class="inputBox">
                        <input type="text" name="name" id="name" >
                        <span>Full Name</span>
                    </div> 
                    <div class="inputBox">
                        <input type="email" id ="email_id" name="email" >
                        <span>Email</span>
                    </div>
                    <div class="inputBox">
                        <input type="text" name="mobile" id="contact" >
                        <span>Contact Number</span>
                    </div>
                    <div class="inputBox">
                        <textarea name="query" required ></textarea>
                        <span>Type Your Message...</span>
                    </div>
                    <div class="inputBox">
                        <input type="submit" name="" value="Send">
                    </div>
                </form>
                <p style="text-align: center;font-size: 1.2rem;"><%=sucess %></p>
            </div>
            <div class="contactInfo">
                <div class="box">
                    <div class="icon"><i class="fa-solid fa-location-dot"></i></div>
                    <div class="text">
                        <h3>Address</h3>
                        <p>555555,NH-5 road,sricty,chittor</p>
                    </div>
                </div>
                <div class="box">
                    <div class="icon"><i class="fa-solid fa-envelope"></i></div>
                    <div class="text">
                        <h3>Email</h3>
                        <p>example@gmail.com</p>
                    </div>
                </div>
                <div class="box">
                    <div class="icon"><i class="fa-solid fa-phone"></i></div>
                    <div class="text">
                        <h3>phone</h3>
                        <p>999-999-9999</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- footer -->

