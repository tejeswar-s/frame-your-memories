        <div class="maincontainer">
            <div class="subcontainer">
                <p style="font-weight: bold;font-size: 1.5rem;">NAME : </p>
            <p> <%=product.pname  %></p>
            <P style="font-weight: bold;font-size: 1.5rem;">CATEGORY : </P>
            <p><%=product.catagory  %></p>
            <P style="font-weight: bold;font-size: 1.5rem;">SUB-CATEGORY : </P>
            <p> <%=product.subcatagory  %></p>
            <P style="font-weight: bold;font-size: 1.5rem;">AVAILABILITY : </P>
            <p></span> 
                <% if(product.pavailability==1){ %>
                    Available
                <% }else{ %>
                    Not Available
                <% } %>
            </p>
            <P style="font-weight: bold;font-size: 1.5rem;">BUDGET : </P>
            <p><%=product.pbudget  %></p>
            <P style="font-weight: bold;font-size: 1.5rem;">DISCOUNT : </P>
            <p><%=product.pdiscount  %> % Discount</p>
            <P style="font-weight: bold;font-size: 1.5rem;">DESCRIPTION : </P>
            <p style="width: 100%;height:40px;overflow-y: auto;"><%=product.pdescription  %></p>
            </div>
        </div>
        
    

</body>
</html>
